<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Defaulter_List"
    android:background="#4184DD">

    <TextView
        android:id="@+id/defaulter"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Defaulter List"
        android:textColor="#444974"
        android:textColorHint="@color/design_default_color_error"
        android:textSize="23sp"
        android:transitionName="logo_text"
        android:gravity="center"
        android:textStyle="bold"
        android:background=" #E4E7EB"
        android:layout_marginTop="20dp"
        />

    <ListView
        android:id="@+id/defaulter_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/defaulter"
        android:layout_marginTop="20dp"
        android:divider="#555358"
        android:dividerHeight="2dp"
        android:padding="10dp"
        android:textAlignment="center"
        android:background=" #E4E7EB"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"

        android:layout_marginBottom="10dp"/>
</RelativeLayout>