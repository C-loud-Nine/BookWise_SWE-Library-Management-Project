<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background=" #CCE4E3"
    tools:context=".ResetPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:gravity="center"
            >
            <LinearLayout
                android:background="@drawable/profile"
                android:layout_width="180dp"
                android:layout_height="180dp">
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textColor="#F44336"
                android:textSize="30dp"
                android:textStyle="italic"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:gravity="center"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emaillayout_forgetPass"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:background="#CCD8E9"
                app:endIconMode="clear_text"
                android:hint="Email"
                android:layout_width="300dp"
                android:layout_height="wrap_content"

                app:errorTextColor="#EA0A0A"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email_forgetPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLength="23"
                    />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:foreground= "?attr/selectableItemBackground"
                android:id="@+id/resetButton"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginTop="43dp"
                android:layout_marginBottom="60dp"
                android:background="#E2DAD2"
                android:gravity="center"
                android:text="Reset"
                android:textColor=" #31115A"
                android:textSize="18sp"
                android:textStyle="bold"
                app:backgroundTint="#E2DAD2"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/linearLayout"
                app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintStart_toStartOf="@id/linearLayout"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>