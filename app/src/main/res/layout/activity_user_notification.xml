<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User_Notification">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F09494"
        android:padding="16dp">

        <TextView
            android:id="@+id/notif"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Notification"
            android:textColor="#444974"
            android:textSize="23sp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="#E4E7EB"
            android:layout_marginTop="20dp"
            android:padding="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:background="#FAFAFA"
            android:elevation="4dp"
            android:layout_marginTop="130dp"
            app:cornerRadius="16dp">

            <TextView
                android:id="@+id/msgtv"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text=""
                android:textStyle="bold|italic"
                android:textSize="18sp"
                android:hint="Message"
                android:background="#F5CDCD"
                android:padding="16dp"
                android:gravity="start|top" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/subscribebtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#E2DAD2"
                android:text="Subscribe"
                android:textColor="#31115A"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/unsubscribebtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#E2DAD2"
                android:text="Unsubscribe"
                android:textColor="#31115A"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
